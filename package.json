{
    "name": "fastty-root",
    "description": "Fastty is a built in tool that provides easy integration between your server and client application",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "start:cli": "lerna run start --scope=@fastty/cli",
        "start:core": "lerna run start --scope=@fastty/core",
        "new-version": "lerna version --conventional-commits --yes",
        "diff": "lerna diff",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
        "format": "prettier --write ."
    },
    "keywords": [
        "cli",
        "npm",
        "automation",
        "typescript",
        "npm-package",
        "developer-tools"
    ],
    "author": "Felipe Bueno",
    "license": "MIT",
    "devDependencies": {
        "@commitlint/cli": "^12.0.1",
        "@commitlint/config-conventional": "^12.0.1",
        "@commitlint/config-lerna-scopes": "^12.0.1",
        "@types/node": "^14.14.20",
        "@typescript-eslint/eslint-plugin": "^4.14.1",
        "@typescript-eslint/parser": "^4.14.1",
        "eslint": "^7.18.0",
        "eslint-config-prettier": "^7.2.0",
        "eslint-plugin-prettier": "^3.3.1",
        "husky": "^4.3.8",
        "lerna": "^4.0.0",
        "lint-staged": "^10.5.3",
        "prettier": "^2.2.1",
        "ts-node": "^9.1.1",
        "typescript": "^4.1.3"
    },
    "lint-staged": {
        "*.{js,ts,tsx,json}": [
            "eslint . --fix"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    }
}
